<div class="profile-sidebar">
    <!-- SIDEBAR USERPIC -->
    <div class="profile-userpic">
        <img src="https://nguoi-noi-tieng.com/photo/tieu-su-ca-si-khoi-9808.jpg" class="img-responsive" alt="">
    </div>
    <!-- END SIDEBAR USERPIC -->
    <!-- SIDEBAR USER TITLE -->
    <div class="profile-usertitle">
        <div class="profile-usertitle-name">
            {{account.name}}
        </div>
        <div class="profile-usertitle-job">
            {{account.status}}
        </div>
    </div>
    <!-- END SIDEBAR USER TITLE -->
    <!-- SIDEBAR BUTTONS -->
    <div class="profile-userbuttons">

        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModalCenter">
            Edit Profile
        </button><br><br>
        <a href="/../users/changepassword">Reset password</a>

        <!-- Modal -->
        {{>modal}}
        <!-- END SIDEBAR BUTTONS -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
            <ul class="nav">
                <li id="acc_detail">
                    <a href="/users/account">
                        <i class="fas fa-user"></i>
                        Detail Information </a>
                </li>
                <li id="acc_favorite">
                    <a href="/users/favorites">
                        <i class="fas fa-heart-broken"></i>
                        Watch list </a>
                </li>
                <li id="acc_cart">
                    <a href="/users/mycart">
                        <i class="fas fa-shopping-cart"></i>
                        My Cart</a>
                </li>

                <!-- <li id="acc_cart">
                                <a href="#">
                                    <i class="glyphicon glyphicon-shopping-cart"></i>

                                    My Cart</a>
                            </li> -->
                <li id="acc_auction">
                    <a href="/users/myauctions">
                        <i class="fas fa-gavel"></i>
                        Bidding list </a>
                </li>
                {{#if isSeller}}
                <li id="acc_product">
                    <a href="/users/myproducts">
                        <i class="fas fa-clipboard-check"></i>
                        My Product </a>
                </li>
                {{/if}}
                <li>
                    <a href="/users/history">
                        <i class="fas fa-history"></i>
                        My Hisotry </a>
                </li>
                {{!-- <li>
                    <a href="/">
                        <i class="fas fa-home"></i>
                        Home </a>
                </li> --}}
            </ul>
        </div>
        <!-- END MENU -->
    </div>
</div>